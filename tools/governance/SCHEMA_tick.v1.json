{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CentralDataKitchen ATAS Tick Tape",
  "description": "Tick-level trades exported by CentralDataKitchen TickTapeExporter (UTC timestamps).",
  "type": "object",
  "required": [
    "ts",
    "exchange",
    "symbol",
    "price",
    "qty",
    "side",
    "exporter_version",
    "schema_version"
  ],
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "Trade timestamp in ISO8601 UTC."
    },
    "exchange": {
      "type": "string",
      "description": "Source exchange identifier (e.g. BINANCE_FUTURES)."
    },
    "symbol": {
      "type": "string",
      "description": "Trading symbol."
    },
    "price": {
      "type": "number"
    },
    "qty": {
      "type": "number"
    },
    "side": {
      "type": "string",
      "enum": ["buy", "sell"],
      "description": "Aggressor side."
    },
    "best_bid": {
      "type": ["number", "null"],
      "description": "Best bid at the time of the trade."
    },
    "best_ask": {
      "type": ["number", "null"],
      "description": "Best ask at the time of the trade."
    },
    "trade_id": {
      "type": ["string", "null"],
      "description": "Exchange provided trade identifier, if any."
    },
    "exporter_version": {
      "type": "string",
      "const": "6.3"
    },
    "schema_version": {
      "type": "string",
      "const": "tick.v1"
    }
  },
  "additionalProperties": false
}
