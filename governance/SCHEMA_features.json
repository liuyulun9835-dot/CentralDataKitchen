{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Central Kitchen Feature Tables",
  "type": "object",
  "properties": {
    "micro_features": {
      "type":"array",
      "items":{"type":"string"},
      "default":[
        "open","high","low","close","volume",
        "cvd",
        "bar_vpo_price","bar_vpo_vol","bar_vpo_loc","bar_vpo_side",
        "range1m","real_body","upper_wick","lower_wick","hlc3","ohlc_vol_norm",
        "impute_flag"
      ]
    },
    "macro_features": {
      "type":"array",
      "items":{"type":"string"},
      "description":"optional slow factors; placeholder at M0",
      "default":[]
    }
  },
  "required": ["micro_features"]
}
