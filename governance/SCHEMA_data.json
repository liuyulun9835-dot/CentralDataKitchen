{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Central Kitchen Baseline Bar Schema (V7)",
  "type": "object",
  "properties": {
    "ts": {"type":"string","format":"date-time"},                       // UTC
    "open": {"type":"number"},
    "high": {"type":"number"},
    "low": {"type":"number"},
    "close": {"type":"number"},
    "volume": {"type":"number"},
    "minute_open": {"type":"string","format":"date-time"},
    "minute_close": {"type":"string","format":"date-time"},
    "src_span_ok": {"type":"boolean"}                                   // both sources present in this minute
  },
  "required": ["ts","open","high","low","close","volume"]
}
